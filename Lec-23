# Deelet Data From list
lst = ['apple', 'Grapes', 'Mango', 'Orange']
# lst.pop() # POP will remove last Element from the list
# print(lst)
lst.pop(2) # delete element from index 2
print(lst) # mango will remove from the list


# del lst[1] # delete from index 1
print(lst)


# remove

lst.remove('apple')
print(lst)


lst = ['apple', 'Grapes', 'Mango', 'Orange']

if "apple" in lst:
    print("Present")
else:
    print("Not Present")


